  <div class="row center-xs  ">
    <div class="col-xs-8 col-md-6">
      <div class="box text-left"></div>
  
  <h2>Iniciar Sesión como Asesor</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field text-left">
      <br />
      <%= f.email_field :email, placeholder:"Email", autofocus: true, class: "form-control" %>
    </div>
  
    <div class="field text-left">
      <br />
      <%= f.password_field :password, placeholder:"Contraseña", autocomplete: "off" , class: "form-control"%>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field text-left">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Iniciar", class:"button blue small " %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  
       </div>
    </div>
  </div>